    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--input_events",
                "./experiments/parsed/street2.bin",
                "--input_video",
                "./experiments/videos/street2.mp4",
                "--input_meta",
                "./experiments/meta/match-street2.json"
            ]
        }
    ]
}